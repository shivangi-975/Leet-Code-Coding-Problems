class Solution {
public:
    int balancedStringSplit(string s) {
        int n=s.size();
        int l=0;
        int r=0;
        int count=0;
        for(int i=0;i<n;i++)
        {
            if(s[i]=='R')
            {
                r++;
            }
            else
            {
                l++;
            }
            if(r==l)
            {
                count++;
            }
        }
        return count;
    }
};
