class Solution {
public:
    bool isPalindrome(int x) {
        if(x==0)
        {
            return true;
        }
        string s=to_string(x);
        reverse(s.begin(),s.end());
        long i=stol(s);
        if((i)==x)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
};



