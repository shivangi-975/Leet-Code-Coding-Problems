class Solution {
public:
    int maxPower(string s) {
        int n=s.size();
        int maxi=INT_MIN;
        //int count=0;
        if(s.size()==1)
        {
            return 1;
        }
        for(int i=1;i<n;i++)
        {   int count=0;
            while(s[i]==s[i-1])
            {
                count++;
                i++;
            }
            maxi=max(maxi,count+1);
        }
        return maxi;
    }
};
