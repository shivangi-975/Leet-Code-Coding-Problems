#include <iostream>
using namespace std;
#include<string>
#include <bits/stdc++.h> 
int main()
{  
   char str1[100];
   char str2[100];
   cout<<"Enter first string";
   cin.getline(str1,100);
   cout<<"Enter second string";
   cin.getline(str2,100);
   string res=strcat(str1,str2);
   cout<<res<<" ";
   return 0;
}
-----------------------------------------------------------------------------
Using append method:
string1.append(string2);
