#include <iostream>
using namespace std;
class Base
{
    public:
    Base(){cout<<"Constructing Base\n";}
    ~Base(){cout<<"Destroying Base\n";}
};
class Derive:public Base
{
    public:
    Derive(){cout<<"Constructing Derive\n";}
    ~Derive(){cout<<"Destryoing Derive\n";}
    
};
int main()
{
    Base*basePtr=new Derive();
    delete basePtr;
    return 0;
}
